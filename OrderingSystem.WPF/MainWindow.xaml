<Window x:Class="OrderingSystem.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderingSystem.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Label Content="Ordering System" Margin="10,10,10,10" FontSize="40" Grid.ColumnSpan="2"/>
        <TabControl x:Name="Tabs" Grid.Column="0" Grid.Row="1">
            <Button Content="Button" HorizontalAlignment="Left" Height="31" Margin="269,0,0,0"/>
            <Button Content="Button" HorizontalAlignment="Left" Height="31" Margin="168,10,0,0"/>

        </TabControl>

    </Grid>
</Window>
